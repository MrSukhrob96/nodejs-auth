html(lang="en")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        meta(http-equiv="X-UA-Compatible", content="ie=edge")
        meta(http-equiv="Content-Language", content="en")
        meta(name="msapplication-TileColor", content="#2d89ef")
        meta(name="theme-color", content="#4188c9")
        meta(name="apple-mobile-web-app-status-bar-style", content="black-translucent")
        meta(name="apple-mobile-web-app-capable", content="yes")
        meta(name="mobile-web-app-capable", content="yes")
        meta(name="HandheldFriendly", content="True")
        meta(name="MobileOptimized", content="320")
        title 
        link(rel="stylesheet", href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css")
        link(rel="stylesheet", href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,300i,400,400i,500,500i,600,600i,700,700i&amp;subset=latin-ext")
        link(rel="stylesheet", href="css/dashboard.css")

    body
        .page
            .page-single
                .container
                    .row
                        .col.col-login.mx-auto
                            .text-center.mb-6
                                img.h-6(src="images/tabler.svg", alt="Logo")
                            form.card(action="/reset", method="post")
                                .card-body.p-6
                                    .card-title
                                        | New password
                                    .form-group
                                        label.form-label(for="password")
                                            | New Password
                                        input.form-control(class=errorPassword ? "is-invalid": "" type="password", id="password", name="password", placeholder="Password" required)
                                        if errorPassword
                                            .invalid-feedback
                                                | #{errorPassword}
                                    if errorForm
                                        .alert.alert-danger(role="alert")
                                            | #{errorForm}
                                    .form-footer
                                        input(type="hidden" name="userId" value=user.id)
                                        button#forgot-btn.btn.btn-primary.btn-block(type="submit")
                                            | Send new password
                            .text-center.text-muted
                                | Forget it,&nbsp;
                                a(href="/login")
                                    | Sign In